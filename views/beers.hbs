<div class="row">
    
    {{#each theBeers }}
    
<div class="col-md-4 col-lg-3">
    <a class="text-decoration-none text-dark" href="/beers/{{id}}">
        <div class="card beer-card mt-5 p-5">
            <img src="{{image_url}}" alt="image-beer">
            <div class="card-body">
                <h5 class="card-title fw-bold">{{name}}</h5>
                <p class="card-description">{{description}}</p>
            </div>
            <div class="card-footer bg-white border-0">
                <p class="card-text">{{tagline}}</p>
            </div>
        </div>
    </a>
</div>

    {{/each}}

</div>